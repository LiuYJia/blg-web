<!DOCTYPE html>
<html>
    <head>
        <title><%= locals.pageMsg.home_title %></title>
        <meta name="Keywords" content="<%= locals.pageMsg.home_keyword %>" />
        <meta name="Description" content="<%= locals.pageMsg.home_description %>" />
        <link rel='stylesheet' href='/stylesheets/fhome.css' />
        <link rel='stylesheet' href='/stylesheets/fheaderFooter.css' />
        <link rel="stylesheet" href="/layui/css/layui.css">    
        <link rel="shortcut icon" href="#" /> 
    </head>
    <body>
        <div class="fhome">

            <!-- 头部&导航栏 -->
            <%- include ../component/fnavbar %>

            <!-- 轮播图 -->
            <div class="layui-carousel" id="fhome-carousel">
                <div carousel-item>
                    <img src="/images/test3.png" alt="">
                    <img src="/images/test2.jpg" alt="">
                    <img src="/images/test1.jpg" alt="">
                </div>
            </div>

            <!-- 数字信息 -->
            <div class="fhome-num">
                <div class="fhome-numItem">
                    <p class="fhome-numItemT fhome-numItemT1"></p>
                    <p class="fhome-numItemB">成立</p>
                </div>
                <div class="fhome-numItem">
                    <p class="fhome-numItemT fhome-numItemT2"><span></span>+</p>
                    <p class="fhome-numItemB">服务</p>
                </div>
                <div class="fhome-numItem">
                    <p class="fhome-numItemT fhome-numItemT3"><span></span>+</p>
                    <p class="fhome-numItemB">客户</p>
                </div>
                <div class="fhome-numItem">
                    <p class="fhome-numItemT fhome-numItemT4"><span></span>+</p>
                    <p class="fhome-numItemB">产品</p>
                </div>
            </div>

            <!-- 产品列表 -->
            <div class="fhome-block fhome-product">
                <div class="fhome-blockInner">
                    <div class="fhome-blockTitle">产品展示<span>| PRODUCT</span>
                        <button class="layui-btn layui-btn-sm moreBtn-product"><a href="/fproduct">更多</a></button>
                    </div>
                    <div class="fhome-productMsg">

                        <% for(var i=0;i<8;i++){ %>
                            <a class="fhome-productItem" href="/fproduct?id=<%= locals.sortArr[i].id %>">
                                <img src="<%= locals.sortArr[i].img_url %>" alt="">
                                <div class="fhome-productItemTxt">
                                    <h3><%= locals.sortArr[i].name %></h3>
                                    <p>
                                        <%= locals.sortArr[i].description %>
                                    </p>
                                </div>
                            </a>
                        <% } %>
                        
                    </div>
                </div>
            </div>

            <!-- 关于我们 -->
            <div class="fhome-block fhome-about">
                <div class="fhome-blockInner">
                    <div class="fhome-aboutTitle">
                        <div>关于我们<span>| ABOUT</span></div>
                    </div>
                    <div class="fhome-aboutMsg">
                        <%= locals.aboutMsg.company_detail %>
                    </div>

                    <button class="layui-btn layui-btn-sm moreBtn-about"><a href="/fabout">更多</a></button>
                    
                    <img src="/images/login.jpg" alt="">
                </div>
            </div>

            <!-- 资讯中心 -->
            <div class="fhome-block fhome-news">
                <div class="fhome-blockInner">
                    <div class="fhome-blockTitle">资讯中心<span>| NEWS</span>
                        <button class="layui-btn layui-btn-sm moreBtn-news"><a href="/fnews">更多</a></button>
                    </div>
                    <div class="fhome-newsMsg">

                        <% for(var i=0;i<locals.newsList.length;i++){ %>
                            <a class="fhome-newsItem" href="/fnewsDetail?id=<%= locals.newsList[i].id %>">
                                <div class="fhome-newsItemTxt">
                                    <h3><%= locals.newsList[i].title %></h3>
                                    <div class="fhome-newsItemContent">
                                        <%= locals.newsList[i].content_txt %>
                                    </div>
                                </div>
                            </a>
                        <% } %>
                        
                    </div>
                </div>
            </div>

            <!-- 联系我们 -->
            <div class="fhome-block fhome-contact">
                <div class="fhome-blockInner">
                    <div class="fhome-blockTitle">联系我们<span>| CONTACT</span></div>
                    <div class="fhome-blockContent fhome-blockContentContact">
                        <div class="fhome-contactMsg">
                            <div class="fhome-contactMsgTitle"><%= locals.companyMsg.company_name %></div>
                            <ul>
                                <li>地址：<%= locals.companyMsg.address %></li>
                                <li>邮编：<%= locals.companyMsg.post_code %></li>
                                <li>电话：<%= locals.companyMsg.phone %></li>
                                <li>邮箱：<%= locals.companyMsg.email %></li>
                            </ul>
                        </div>
                        <div class="fhome-contactForm layui-form" lay-filter="contact">
                            <div class="layui-form-item">
                                <div class="layui-input-block">
                                    <input type="text" name="name" required  lay-verify="required" placeholder="请输入称呼" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <div class="layui-input-block">
                                    <input type="text" name="phone" required  lay-verify="required" placeholder="请输入联系方式" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-form-item layui-form-text">
                                <div class="layui-input-block">
                                    <textarea name="desc" placeholder="请输入您的建议" class="layui-textarea"></textarea>
                                </div>
                            </div>
                            <button class="layui-btn contactSubmit">提交</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 底部栏 -->
            <%- include ../component/footer %>
            
        </div>
    </body>
    <script src="/layui/layui.js"></script>
    <script src="/jquery/jquery-3.4.1.min.js"></script>
    <script src="/javascript/fhome.js"></script>
    <script>
        (function($){
            $.fn.numberRock=function(options){
                var defaults={
                    speed:24,
                    count:100
                };
                var opts=$.extend({}, defaults, options);

                var div_by = 100,
                count=opts["count"],
                speed = Math.floor(count / div_by),
                sum=0,
                $display = this,
                run_count = 1,
                int_speed = opts["speed"];
                var int = setInterval(function () {
                    if (run_count <= div_by&&speed!=0) {
                        $display.text(sum=speed * run_count);
                        run_count++;
                    } else if (sum < count) {
                        $display.text(++sum);
                    } else {
                        clearInterval(int);
                    }
                }, int_speed);
            }
        })(jQuery);

        $(".fhome-numItemT1").numberRock({
            speed:10,
            count:2003
        })
        $(".fhome-numItemT2 span").numberRock({
            speed:10,
            count:1000
        })
        $(".fhome-numItemT3 span").numberRock({
            speed:10,
            count:100
        })
        $(".fhome-numItemT4 span").numberRock({
            speed:10,
            count:200
        })
    </script>
</html>