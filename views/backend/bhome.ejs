<div class="home">
    <div class="home-card">
        <div class="layui-card">
            <div class="layui-card-header">历史访问次数 <i class="layui-icon layui-icon-log"></i></div>
            <div class="layui-card-body">
                历史访问次数：<span></span>
            </div>
        </div>
    </div>
    <div class="home-echarts">
        <script src="/jquery/jquery-3.4.1.min.js"></script>
        <script src="/echarts/echarts.min.js"></script>
        <div id="main" style="width: 100%;height:400px;"></div>
        <script type="text/javascript">
            var totalNum = 0;
            $.ajax({
                url:'/home/historyAccess',
                type:'get',
                success:function(d){
                    console.log(d)
                    var data = d.result.map(function(e){
                        console.log(e)
                        var obj = {
                            name:new Date(e.date).toLocaleDateString(),
                            value:[new Date(e.date).toLocaleDateString(),e.num]
                        }
                        totalNum += e.num;
                        return obj
                    })
                    $('.home .layui-card-body span').text(totalNum)
                    renderEchart(data)
                    console.log(data)
                }
            })
            function renderEchart(renderdata){
                // 基于准备好的dom，初始化echarts实例
                var myChart = echarts.init(document.getElementById('main'));
                // 指定图表的配置项和数据
                var option = {
                    title: {
                        text: '次数/日',
                    },
                    tooltip: {},
                    legend: {
                        data:['次数']
                    },
                    color:'#009688',
                    xAxis: {
                        type: 'time',
                        splitLine: {
                            show: false
                        }
                    },
                    yAxis: {},
                    series: [{
                        name: '次数',
                        type: 'line',
                        data: renderdata
                    }]
                };
                // 使用刚指定的配置项和数据显示图表。
                myChart.setOption(option);
            }
        </script>
    </div>
</div>