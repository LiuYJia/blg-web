                            <% include ./bhome %>
                        <% } %>

                        <!-- 产品展示 -->
                        <% if(locals.page == 'productSort'){ %>
                            <% include ./productSort %>
                        <% } %>

                        <% if(locals.page == 'productList'){ %>
