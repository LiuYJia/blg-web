                        <% } %>

                        <!-- 资讯中心 -->
                        <% if(locals.page == 'news'){ %>
                            <% include ./news %>
                        <% } %>

                        <!-- 友情链接 -->
                        <% if(locals.page == 'friendLink'){ %>
                            <% include ./friendLink %>
                        <% } %>

                        <!-- 个人资料 -->
                        <% if(locals.page == 'adminMessage'){ %>
                            <% include ./adminMessage %>
                        <% } %>
                        

                    </div>
                </div>
            </div> 
        </div>
    </body>
</html>

